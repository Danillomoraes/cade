<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- <style name="AppTheme" parent="AppTheme.Base"/>
        <style name="AppTheme.Base" parent="Theme.AppCompat"> -->
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/brown_600</item>
        <item name="android:colorPrimaryDark">@color/brown_900</item>
        <item name="android:colorAccent">@color/dark_green</item>
        <item name="android:colorControlHighlight">@color/green</item>
        <item name="android:statusBarColor">@color/brown_900</item>
        <item name="android:navigationBarColor">@color/brown_900</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@null</item>
        <item name="android:colorPrimary">@color/brown_600</item>
        <item name="android:colorPrimaryDark">@color/brown_900</item>
        <item name="android:colorAccent">@color/dark_green</item>
    </style>

    <style name="material_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/dark_green</item>
        <item name="android:colorControlHighlight">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="transparent_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/drawble_ripple</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="simple_edittext" parent="android:Widget.Holo.EditText">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="face_button_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">#3B5998</item>
        <item name="android:colorControlHighlight">@color/blue</item>
        <item name="android:drawableStart">@drawable/icon_face</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="google_button_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">#dd4b39</item>
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="android:drawableStart">@drawable/icon_google_icon</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="material_edittext">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/drawble_edittext_transparent</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>