<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativelayaout"
    android:background="@drawable/book_background">

    <RelativeLayout
        android:background="@android:color/transparent"
        android:id="@+id/relative_logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingLeft="16dp"
           android:paddingRight="16dp"
           android:orientation="vertical" >  

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:src="@drawable/logo_beta_branco"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-50dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center" />

            <TextView
                android:background="@android:color/transparent"
                style="@style/shadow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CadÃª Meu Livro?"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:textColorHighlight="@android:color/white"
                android:layout_below="@+id/imageView"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp" />
        
      </LinearLayout>    
        
    </RelativeLayout>


    <RelativeLayout
        android:background="@android:color/transparent"
        android:id="@+id/relative_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_logo"
        android:layout_above="@+id/bt_signup">
      
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" >

            <EditText
                android:id="@+id/tb_email"
                style="@style/material_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:drawableStart="@android:drawable/sym_action_email"
                android:hint="Email ou Login"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


            <EditText
                android:id="@+id/tb_senha"
                style="@style/material_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tb_email"
                android:layout_gravity="bottom"
                android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/bt_login"
                style="@style/material_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="90dp"
                android:onClick="callactivity"
                android:text="Login"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:layout_alignParentBottom="true" />

      </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/relative_login"
        android:layout_below="@+id/relative_logo"
        android:layout_above="@+id/bt_signup"
        android:visibility="invisible">
      
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" >  

            <EditText
                style="@style/material_edittext"
                android:id="@+id/tb_sign_nome"
                android:hint="Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                style="@style/material_edittext"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/tb_sign_email"
                android:layout_below="@+id/tb_sign_nome"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                style="@style/material_edittext"
                android:hint="Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/tb_sign_pass"
                android:layout_below="@id/tb_sign_email"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                style="@style/material_edittext"
                android:hint="Confirmar Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/tb_sign_conf_pass"
                android:layout_below="@+id/tb_sign_pass"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        
      </LinearLayout>
        
    </RelativeLayout>

    <Button
        android:id="@+id/bt_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Google+"
        android:theme="@style/google_button_style" />

    <Button
        android:id="@+id/bt_facebook"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/bt_google"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bt_google"
        android:layout_marginRight="0dp"
        android:text="Facebook"
        android:theme="@style/face_button_style" />

    <Button
        android:id="@+id/bt_signup"
        style="@style/material_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/bt_google"
        android:onClick="sign_form"
        android:text="sign up" />


</RelativeLayout>
