<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/brown_900">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown_600"
                app:titleTextColor = "@color/white"
                android:elevation="2dp" />

        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear"
            android:fillViewport="true"
            android:fitsSystemWindows="false"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F1F1"
                android:orientation="vertical"
                android:fitsSystemWindows="false">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/icon"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/text_view"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@+id/img"
                            android:padding="3dp"
                            android:text="Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto"
                            android:textColor="#000000"
                            android:background="@color/white"/>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/bt_sera"
                            android:theme="@style/material_button"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:text="Será ?" />

                        <Button
                            android:id="@+id/bt_sera3"
                            android:theme="@style/material_button"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/bt_sera"
                            android:text="Será ?" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardview2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:theme="@style/AppBaseTheme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/icon" />

                        <TextView
                            android:id="@+id/text_view2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@+id/img2"
                            android:padding="3dp"
                            android:text="Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto"
                            android:textColor="#000000" />

                        <Button
                            android:theme="@style/material_button"
                            android:id="@+id/bt_sera2"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:text="Será ?" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardview3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/icon"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="14dp"
                            android:layout_marginBottom="171dp" />

                        <TextView
                            android:id="@+id/text_view3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@+id/img3"
                            android:padding="3dp"
                            android:text="Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto, Este é um Texto"
                            android:textColor="#000000" />

                        <Button
                            android:theme="@style/material_button"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:text="Será ?" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <!--<RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/drawer_item_layout" />

    </RelativeLayout> -->

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_drawer"
        app:headerLayout="@layout/drawer_header"/>

</android.support.v4.widget.DrawerLayout>
